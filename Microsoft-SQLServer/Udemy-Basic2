
【テーブルの作成】
create table SampleTable(
id int identity(1,1) not null,
Name varchar(20) not null,
quantity int not null
primary key(
Id)
)

【単一データの追加】
insert into SampleTable(Name,quantity) Values('Banana',1)
<結果表示>
Select * from SampleTable

Insert into SampleTable Values ('Apple',2)

【複数データの追加】
insert into SampleTable(Name, quantity)
Values ('Orange',3)
,('Lemon',4)
,('Meron',2)

<結果表示>
Select * from SampleTable

【テーブルのコピー】
Select * into SampleTableCopy77 from sampletable
Select * from SampleTableCopy77

【テーブルの一部の条件のみコピー】
select * into sampletablecopy22 from
(select * from sampletable where name='Banana') as table1

Select * from SampleTableCopy22

【空のテーブルのコピー】
select * into sampletablecopy33
from (select * from sampletable where 0=1) as t1

Select * from SampleTableCopy33

【テーブルから別のテーブルへの値のinsert】
insert into [dbo].[sampletablecopy33]
select name,quantity  from [dbo].[SampleTable]]

【データの更新】※sampletableのデータ更新 
update sampletable set quantity=5
where name='apple'

Select * from SampleTable

【テーブルのマージの準備】
select * into MergeSourceTable
from (select * from SampleTable where 0=1) as t 

select * into MergeDestinationtable
from (select * from Sampletable where 0=1) as t 

【テーブルのマージ】
insert into [dbo].[MergeSourceTable] values('banana',1),('apple',2),('Lemon',3),('orange',4)
insert into [dbo].[MergeDestinationtable] values('banana',5)

select * from [dbo].[MergeSourceTable]
select * from [dbo].[MergeDestinationtable]

merge into [dbo].[MergeDestinationtable]
using [dbo].[MergeSourceTable]
on [dbo].[MergeDestinationtable].name=[dbo].[MergeSourceTable].quantity
when matched then
    update set [dbo].[MergeDestinationtable].quantity=[dbo].[MergeSourceTable].quantity
when not matched then
    insert values ([dbo].[MergeSourceTable].name, [dbo].[MergeSourceTable].quantity);

select * from [dbo].[MergeSourceTable]
select * from [dbo].[MergeDestinationtable]

【テーブルの削除】
delete from [dbo].[MergeSourceTable]
where name='lemon'

SELECT TOP (1000) * FROM [dbo].[MergeSourceTable]


【テーブルの一括削除　truncate】
truncate table [dbo].[MergeSourceTable]
